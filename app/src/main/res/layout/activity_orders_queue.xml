<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/greyBackground"
    tools:context=".OrdersQueue">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkGreyBackground">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:src="@drawable/cancel_icon"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Orders"
            android:gravity="center"
            android:paddingTop="@dimen/_5sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_22sdp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/order_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Orders Queue"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/white"
            android:gravity="center"/>

        <ListView
            android:id="@+id/list_queue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_txt"
            tools:listitem="@layout/list_order_queue" />


    </RelativeLayout>
</LinearLayout>
