<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyBackground"
    android:gravity="top"
    android:orientation="vertical"
    tools:context=".HomeScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkGreyBackground"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_weight="1"
            android:src="@drawable/icons8_menu_50" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="Delivery Boot"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_weight="1"
            android:src="@drawable/icons8_search_50" />


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="265dp"
        android:layout_gravity="fill_horizontal"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/robot_image" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginVertical="@dimen/_20sdp"
        android:textSize="@dimen/_18sdp"
        android:text="Last Orders" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_50sdp"


        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/orderimage1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="start"

                android:paddingRight="@dimen/_10sdp"
                android:src="@drawable/delivery_bag" />

            <TextView
                android:id="@+id/order_item1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="@dimen/_5sdp"

                android:paddingRight="@dimen/_10sdp"
                android:text="From 301 to 309"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/date1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/_15sdp"
                android:text=" 28 / 11"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/time1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_5sdp"
                android:text="06:39 PM"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/orderimage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="start"

                android:paddingRight="@dimen/_10sdp"
                android:src="@drawable/delivery_bag" />

            <TextView
                android:id="@+id/order_item2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="@dimen/_5sdp"

                android:paddingRight="@dimen/_10sdp"
                android:text="From 301 to 309"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/date2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/_15sdp"
                android:text=" 28 / 11"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/time2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_5sdp"
                android:text="06:39 PM"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/orderimage3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="start"

                android:paddingRight="@dimen/_10sdp"
                android:src="@drawable/delivery_bag" />

            <TextView
                android:id="@+id/order_item3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="@dimen/_5sdp"

                android:paddingRight="@dimen/_10sdp"
                android:text="From 301 to 309"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/date3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/_15sdp"
                android:text=" 28 / 11"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/time3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_5sdp"

                android:text="06:39 PM"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/new_order"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:background="@drawable/rounded_button"


        android:text="New Order" />

</LinearLayout>
