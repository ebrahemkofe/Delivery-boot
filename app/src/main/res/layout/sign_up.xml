<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.SignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue">

            <ImageView
                android:id="@+id/cancelIcon"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_weight="1"
                android:scaleType="fitStart"
                android:src="@drawable/cancel_icon" />

            <TextView
                android:id="@+id/signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="SignUp"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/white" />
        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/signupimage"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:src="@drawable/person_design" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_30sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fullname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/blue" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:autofillHints="emailAddress"
                    android:backgroundTint="@color/blue"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@color/blue"
                    android:textColorHint="@color/light_blue" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_30sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/blue" />

                <EditText
                    android:id="@+id/emailtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blue"
                    android:ems="10"
                    android:hint="max@Example.com"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/blue"
                    android:textColorHint="@color/light_blue" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_30sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/phonenumper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Numper"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/blue" />

                <EditText
                    android:id="@+id/phonenumpertext"
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:backgroundTint="@color/blue"
                    android:ems="10"
                    android:inputType="number"
                    android:textColor="@color/blue"
                    android:textColorHint="@color/light_blue" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_30sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/blue" />

                <EditText
                    android:id="@+id/passwordtext"
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:backgroundTint="@color/blue"
                    android:ems="10"
                    android:hint="*******"
                    android:inputType="textPassword"
                    android:textColor="@color/blue"
                    android:textColorHint="@color/light_blue" />
            </LinearLayout>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_20sdp"
                android:orientation="horizontal">


                <RadioButton
                    android:id="@+id/studentbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@android:drawable/radiobutton_off_background"
                    android:text=" Student"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/blue" />

                <RadioButton
                    android:id="@+id/employeebutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@android:drawable/radiobutton_off_background"
                    android:text=" Employee"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/blue" />
            </RadioGroup>

            <Button
                android:id="@+id/savebutton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@drawable/rounded_button"

                android:gravity="center"
                android:onClick="btn_join"
                android:text="Join Us"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white"
                android:textSize="@dimen/_25sdp" />

            <TextView
                android:id="@+id/privacymsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:gravity="center"
                android:text="By continuing, you agree to accept our privacy policy &amp; Terms of services."
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/blue"
                android:textSize="@dimen/_13sdp" />


        </LinearLayout>
    </LinearLayout>
</ScrollView>