<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/orderImage"
        android:layout_width="84dp"
        android:layout_height="61dp"
        android:layout_centerVertical="true"
        android:layout_gravity="start"
        android:padding="@dimen/_10sdp"
        android:src="@drawable/delivery_bag" />

    <TextView
        android:id="@+id/from_to_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/orderImage"
        android:text="301 to 309"
        android:textColor="@color/light_blue"
        android:textSize="@dimen/_15sdp"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_toEndOf="@id/from_to_txt">

        <TextView
            android:id="@+id/username_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_5sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:text="Username"
            android:textColor="@color/light_blue"
            android:textSize="@dimen/_15sdp"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <TextView
            android:id="@+id/date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/username_txt"
            android:layout_centerInParent="true"
            android:text="09 : 24"
            android:textColor="@color/light_blue"
            android:textSize="@dimen/_15sdp"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/lamp"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginRight="27dp"
        android:layout_toLeftOf="@id/clear_btn"
        android:src="@drawable/red_lamp"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <ImageView
        android:id="@+id/clear_btn"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingEnd="@dimen/_10sdp"
        android:src="@drawable/clear_icon"
        tools:ignore="ContentDescription,RtlSymmetry" />
</RelativeLayout>